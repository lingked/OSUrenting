<%- include ("../partials/header") %>

<div class="container">
	<div class="row">

		<h1 style="text-align: center">Edit <%= apartment.name %></h1>
		<div style="width: 30%; margin: 20px auto">
			<form action="/apartments/<%=apartment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="apartment[name]" value="<%= apartment.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="apartment[price]" value="<%=apartment.price %>"
						   min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="apartment[image]" value="<%= apartment.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="apartment[description]" value="<%= apartment.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a class="btn btn-sm" href='/apartments'>Go back</a>
		</div>
		
	</div>
</div>

<%- include ("../partials/footer") %>