<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit Share</h1>
		<div style="width: 30%; margin: 20px auto">
			<form action="/apartments/<%= apartment_id %>/shares/<%=share._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="share[title]"  value="<%= share.title %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="share[text]"  value="<%= share.text %>">
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a class="btn btn-sm" href='/apartments'>Go back</a>
		</div>
		
	</div>
</div>

<%- include ("../partials/footer") %>