<%- include ("../partials/header") %>

<div class="container">
	<div class="row">

		<h1 style="text-align: center">Add new comments to <%= campground.name %></h1>
		<div style="width: 30%; margin: 20px auto">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a class="btn btn-sm" href='/campgrounds'>Go back</a>
		</div>
		
	</div>
</div>

<%- include ("../partials/footer") %>